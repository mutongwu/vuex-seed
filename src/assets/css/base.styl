
@import './helper.styl'

// touch
html
  -webkit-tap-highlight-color transparent
  -webkit-touch-callout none

// font
body
  font-family "Helvetica Neue", Helvetica, Arial, "Heiti SC", "Microsoft Yahei", "Luxi Sans", "DejaVu Sans", Tahoma, "Hiragino Sans GB", STHeiti, SimSun, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

// rem
html
  background-color #fff
  font-size baseFontSize

html
  for i in 0..50
    @media (min-width: 320 + (i * 2)px)
      font-size: baseFontSize * ((320 + (i * 2)) / 320)

body
  font-size fn-rem(26)
  color #333
  min-width 320px
  max-width 640px
  margin 0 auto
  background transparent

.clearfix
  zoom:1

  &:after
    content "."
    display block
    height 0
    clear both
    visibility hidden
a
  text-decoration none
  cursor pointer

.pull-left
  float: left

.pull-right
  float: right

img, video, iframe
  max-width: 100%

.btn
  display: inline-block;
  padding: rEm(6) rEm(12)
  margin-bottom: 0;
  font-size: rEm(28)
  font-weight: 400;
  line-height: 1.5;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  user-select: none;
  background-image: none;
  border: 1px solid transparent;
  border-radius: 4px;
  &[disabled]
    pointer-events: none;
    cursor: not-allowed;
    box-shadow: none;
    opacity: .65;
  &.btn-primary
    color: #fff;
    background-color: #428bca;
    border-color: #357ebd;

.component-header + .pageBd
  padding-top rEm(88)