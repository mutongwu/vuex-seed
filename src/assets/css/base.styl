
@import './helper.styl'

// touch
html
  -webkit-tap-highlight-color transparent
  -webkit-touch-callout none

// font
body
  font-family "Helvetica Neue", Helvetica, Arial, "Heiti SC", "Microsoft Yahei", "Luxi Sans", "DejaVu Sans", Tahoma, "Hiragino Sans GB", STHeiti, SimSun, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

// rem
html
  background-color #fff
  font-size baseFontSize

html
  for i in 0..50
    @media (min-width: 320 + (i * 2)px)
      font-size: baseFontSize * ((320 + (i * 2)) / 320)

body
  font-size fn-rem(26)
  color #333
  min-width 320px
  max-width 640px
  margin 0 auto
  background transparent

.clearfix
  zoom:1

  &:after
    content "."
    display block
    height 0
    clear both
    visibility hidden
a
  text-decoration none
  cursor pointer

.pull-left
  float: left

.pull-right
  float: right

img, video, iframe
  max-width: 100%